<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>


    <!-- Route every request through FastCGI/Python -->
    <handlers>
      <add name="PythonHandler" path="*" verb="*"
           modules="FastCgiModule"
           scriptProcessor="C:\Python313\python.exe|C:\Python313\Scripts\wfastcgi.py"
           resourceType="Unspecified" requireAccess="Script" />
    </handlers>

    <!-- BEGIN temporary diagnostics -->
    
    <!-- END temporary diagnostics -->

    <!-- (Optional) enable compression, caching, etc. -->
  </system.webServer>

  <appSettings>
    <!-- Where is the WSGI callable? -->
    <add key="WSGI_HANDLER" value="backend.wsgi.application" />
    <!-- Add project root to PYTHONPATH -->
    <add key="PYTHONPATH" value="C:\inetpub\wwwroot\zetaslate\backend" />
    <!-- If you have a prod settings module, declare it -->
    <!-- <add key="DJANGO_SETTINGS_MODULE" value="backend.settings" /> -->
  </appSettings>
</configuration>
