<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- FastCGI handler: every request goes to Python -->
    <handlers>
      <add name="PythonHandler"
           path="*"
           verb="*"
           modules="FastCgiModule"
           scriptProcessor="C:\Python313\python.exe|C:\Python313\Scripts\wfastcgi.py"
           resourceType="Unspecified"
           requireAccess="Script" />
    </handlers>
  </system.webServer>

  <appSettings>
    <!-- WSGI application Django should start -->
    <add key="WSGI_HANDLER" value="backend.wsgi.application" />

    <!-- Project root so Python can import the inner `backend` package -->
    <add key="PYTHONPATH" value="C:\inetpub\wwwroot\zetaslate\backend" />

    <!-- Log every traceback to this file (rotated manually if desired) -->
    <add key="WSGI_LOG" value="C:\inetpub\wwwroot\zetaslate\backend\django.log" />
  </appSettings>
</configuration>
