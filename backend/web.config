<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler"
           path="*"
           verb="*"
           modules="FastCgiModule"
           scriptProcessor="C:\Python313\python.exe|C:\Python313\Scripts\wfastcgi.py"
           resourceType="Unspecified"
           requireAccess="Script">

        <!-- pass env-vars straight to the worker -->
        <environmentVariables>
          <add name="WSGI_LOG" value="C:\inetpub\logs\django\backend.log" />
        </environmentVariables>

      </add>
    </handlers>
  </system.webServer>

  <appSettings>
    <add key="WSGI_HANDLER" value="backend.wsgi.application" />
    <add key="PYTHONPATH"  value="C:\inetpub\wwwroot\zetaslate\backend" />
  </appSettings>
</configuration>
