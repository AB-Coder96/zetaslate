<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- 0️⃣  Serve /media/** files directly from disk  -->
    <rewrite>
      <rules>

        <rule name="Media files" stopProcessing="true">
          <!-- Match any URL that begins with /media/ -->
          <match url="^media/(.*)$" />

          <!-- Rewrite to an absolute path on disk.
               Replace with the real MEDIA_ROOT path. -->
          <action type="Rewrite"
                  url="C:\sites\zetaslate\media\{R:1}" />
        </rule>

        <!-- 1️⃣  admin.zetaslate.com  →  /admin/** -->
        <rule name="Admin sub-domain" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTP_HOST}"
                 pattern="^admin\.zetaslate\.com$" />
          </conditions>
          <action type="Rewrite"
                  url="http://localhost:8000/admin/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_HOST"  value="{HTTP_HOST}" />
            <set name="HTTP_X_FORWARDED_PROTO" value="https" />
          </serverVariables>
        </rule>

        <!-- 2️⃣  api.zetaslate.com  →  /api/** -->
        <rule name="API sub-domain" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTP_HOST}"
                 pattern="^api\.zetaslate\.com$" />
          </conditions>
          <action type="Rewrite"
                  url="http://localhost:8000/api/{R:1}" />
          <serverVariables>
            <set name="HTTP_X_FORWARDED_HOST"  value="{HTTP_HOST}" />
            <set name="HTTP_X_FORWARDED_PROTO" value="https" />
          </serverVariables>
        </rule>

      </rules>
    </rewrite>

    <!-- Allow IIS to serve *any* file extension in /media/.
         (Tighten this list if you prefer stricter control.) -->
    <staticContent>
      <mimeMap fileExtension=".*"
               mimeType="application/octet-stream" />
    </staticContent>

  </system.webServer>
</configuration>
