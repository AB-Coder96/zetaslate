<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <!-- allow setting forwarded headers -->
      <allowedServerVariables>
        <add name="HTTP_X_FORWARDED_PROTO" />
        <add name="HTTP_X_FORWARDED_HOST" />
      </allowedServerVariables>

      <rules>
        <!-- Redirect any plain HTTP request to HTTPS -->
        <rule name="Force HTTPS" enabled="true" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:1}" redirectType="Permanent" />
        </rule>

        <!-- Proxy admin subdomain to Django -->
        <rule name="admin subdomain → Django" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^admin\.zetaslate\.com$" />
          </conditions>
          <action type="Rewrite" url="http://127.0.0.1:8000/admin/{R:1}" />
        </rule>

        <!-- Proxy api subdomain to Django -->
        <rule name="api subdomain → Django" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTP_HOST}" pattern="^api\.zetaslate\.com$" />
          </conditions>
          <action type="Rewrite" url="http://127.0.0.1:8000/api/{R:1}" />
        </rule>

        <!-- IMPORTANT: no catch-all proxy rule here -->
      </rules>

      <!-- set forwarded headers for Django -->
      <outboundRules rewriteBeforeCache="true">
        <rule name="Set X-Forwarded-Proto" preCondition="Always">
          <match serverVariable="HTTP_X_FORWARDED_PROTO" pattern=".*" />
          <action type="Rewrite" value="https" />
        </rule>
        <rule name="Set X-Forwarded-Host" preCondition="Always">
          <match serverVariable="HTTP_X_FORWARDED_HOST" pattern=".*" />
          <action type="Rewrite" value="{HTTP_HOST}" />
        </rule>
        <preConditions>
          <preCondition name="Always">
            <add input="{R:0}" pattern=".*" />
          </preCondition>
        </preConditions>
      </outboundRules>
    </rewrite>

    <!-- Let React handle unknown asset types -->
    <staticContent>
      <mimeMap fileExtension=".*" mimeType="application/octet-stream" />
    </staticContent>
  </system.webServer>
</configuration>
